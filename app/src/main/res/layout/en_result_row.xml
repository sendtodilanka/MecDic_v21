<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="1dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/resultDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Android"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cacaca"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardBtnShare"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#4FC3F7"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@android:color/background_light"
                android:drawableLeft="@drawable/share_variant"
                android:text="Share"/>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#cacaca"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardBtnCopy"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#BA68C8"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@android:color/background_light"
                android:drawableLeft="@drawable/content_copy"
                android:text="Copy"/>

            <LinearLayout
                android:id="@+id/btnPlay_lyt"
                android:layout_width="1px"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:background="#cacaca"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardBtnPlay"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#4DB6AC"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@android:color/background_light"
                android:drawableLeft="@drawable/volume_high"
                android:text="Play"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>